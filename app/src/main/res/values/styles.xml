<resources>

    <!-- Base application theme. -->
    <style name="RadTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/grayDark</item>
    </style>

    <style name="RadTheme.TitleBar">
        <item name="android:background">@color/radPadYellow</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RadTheme.AddressEdit">
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
